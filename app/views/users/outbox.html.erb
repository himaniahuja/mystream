<div id="content">
  <div class="itemdetail">
    <% if @messages.blank? %>
        <h4>There are no messages in outbox.</h4>
    <% else %>
        <% @messages.each do |m| %>
            <ul class="pageitem">
              <a href='<%= show_sent_message_path(m.id) %>'>

                <div class="bigText">
                  <%= m.topic %>
                </div>

                <div class="mediumText">
                  Sent to:  <%= @messagesHash[m.id] %>
                </div>


                <div class="lightText">
                  <%= m.created_at.strftime("%B %d %Y (%a)") %>
                </div>

              </a>
            </ul>
        <% end %>
        <ul class="pageitem">
            <span class="name">
                 <% @flag = "outbox" %>
                 <%= link_to 'Delete all', delete_messages_path(@flag) %>
            </span>
        </ul>

    <% end %>


  </div>
</div>